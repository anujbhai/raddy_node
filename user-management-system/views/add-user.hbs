<div class="row mt-5">
  <div class="col">
    <h2>New user</h2>

    {{#if alert}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <strong>Great!</strong> {{alert}}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}
  </div>
</div>

<hr>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Library</li>
  </ol>
</nav>

<form class="row g-3 needs-validation" method="post" action="/adduser" novalidate>
  <div class="col-6">
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="floatingFname" placeholder="First Name" name="first_name" />
      <label for="floatingFname">First Name</label>
    </div>
  </div>

  <div class="col-6">
    <div class="form-floating">
      <input type="text" class="form-control" id="floatingLname" placeholder="Last Name" name="last_name" />
      <label for="floatingLname">Last Name</label>
    </div>
  </div>

  <div class="col-6">
    <div class="form-floating mb-3">
      <input type="email" class="form-control" id="floatingEmail" placeholder="Email" name="email" />
      <label for="floatingEmail">Email</label>
    </div>
  </div>

  <div class="col-6">
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="floatingPhone" placeholder="Phone" name="phone" />
      <label for="floatingPhone">Phone</label>
    </div>
  </div>
  
  <div class="col-12">
    <div class="form-floating mb-3">
      <textarea class="form-control" placeholder="Comments/Suggestions/Queries" name="comments" id="floatingComments"></textarea>
      <label for="floatingComments">Comment</label>
    </div>
  </div>

  <div class="d-grid gap-2 col-3 mx-auto">
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>